{
  "parser": "@typescript-eslint/parser",
  "extends": ["next/core-web-vitals", "plugin:@next/next/recommended", "plugin:@typescript-eslint/recommended", "plugin:prettier/recommended"],
  "plugins": [
    "@typescript-eslint",
    "prettier"
  ],
  "rules": {
    "semi": ["error", "never"],
    "prettier/prettier": "error",
    "no-use-before-define": "off",
    "arrow-body-style": "off",
    "prefer-arrow-callback": "off",
    "no-redeclare": "off",
    "@typescript-eslint/no-unused-vars": [
      "error",
      {
        "argsIgnorePattern": "^_",
        "varsIgnorePattern": "^_",
        "ignoreRestSiblings": true
      }
    ],
    "no-unused-vars": [
      "error",
      {
        "argsIgnorePattern": "^_",
        "varsIgnorePattern": "^_",
        "ignoreRestSiblings": true
      }
    ],
    "@typescript-eslint/no-redeclare": ["error"]
  }
}
